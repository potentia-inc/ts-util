{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src", "test"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true
  }
}
